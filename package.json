{
	"version": "2.7.0",
	"project": "common",
	"name": "@calvear/env",
	"title": "Environment Variables CLI Tool",
	"description": "Extensible environment variables handler for NodeJS apps",
	"author": "Alvear Candia, Cristopher Alejandro <calvear93@gmail.com>",
	"repository": "https://github.com/calvear93/env",
	"license": "MIT",
	"private": false,
	"keywords": [
		"env",
		"node",
		"cli",
		"typescript"
	],
	"scripts": {
		"build": "pnpm prebuild && tsc --p tsconfig.build.json && pnpm postbuild",
		"test": "jest --watchAll=false --verbose",
		"pub": "pnpm build && npm login && pnpm publish dist --access public",
		"lint": "eslint --ext .ts src/",
		"lint:fix": "eslint --fix --ext .ts, src/",
		"prebuild": "pnpx del-cli dist/**",
		"postbuild": "copyfiles package.json README.md LICENSE.md CHANGELOG.md assets/* dist"
	},
	"dependencies": {
		"@npmcli/ci-detect": "^3.0.2",
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"chalk": "^4.1.2",
		"merge-deep": "^3.0.3",
		"subslate": "^1.0.0",
		"to-json-schema": "^0.2.5",
		"tslog": "^3.3.4",
		"yargs": "^17.7.1",
		"yargs-parser": "^21.1.1"
	},
	"devDependencies": {
		"@types/jest": "^29.5.1",
		"@types/merge-deep": "^3.0.0",
		"@types/node": "^18.15.13",
		"@types/npmcli__ci-detect": "^2.0.0",
		"@types/to-json-schema": "^0.2.1",
		"@types/yargs": "^17.0.24",
		"@types/yargs-parser": "^21.0.0",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jest-formatting": "^3.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-sonarjs": "^0.19.0",
		"eslint-plugin-unicorn": "^46.0.0",
		"jest": "^29.5.0",
		"prettier": "^2.8.7",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.4"
	},
	"main": "index.js",
	"types": "index.d.ts",
	"bin": {
		"env": "main.js"
	},
	"engines": {
		"node": "~16.0.0 || >=18"
	},
	"config": {
		"delimiters": {
			"template": [
				"[[",
				"]]"
			],
			"subcommand": [
				":",
				":"
			]
		},
		"parser": {
			"short-option-groups": true,
			"camel-case-expansion": false,
			"dot-notation": true,
			"parse-numbers": true,
			"boolean-negation": false
		}
	}
}
