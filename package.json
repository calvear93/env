{
    "version": "1.0.0",
    "project": "common",
    "name": "@calvear/env",
    "title": "Environment Variables CLI Tool",
    "description": "Extensible environment variables handler for NodeJS apps",
    "author": "Alvear Candia, Cristopher Alejandro <calvear93@gmail.com>",
    "repository": "https://github.com/calvear93/env",
    "license": "MIT",
    "private": false,
    "keywords": [
        "env",
        "node",
        "cli",
        "typescript"
    ],
    "scripts": {
        "build": "tsc --p tsconfig.build.json",
        "upload": "npm run build && npm login && cd dist && npm publish --access public",
        "lint": "eslint --ext .ts src/",
        "lint:fix": "eslint --fix --ext .ts, src/",
        "test": "jest --watchAll=false --verbose",
        "prebuild": "rimraf dist/**",
        "postbuild": "copyfiles package.json README.md LICENSE.md CHANGELOG.md assets/* dist",
        "exec": "npm run build && node dist/main.js -e dev --mode debug : npx nodemon test.js"
    },
    "dependencies": {
        "ajv": "^8.10.0",
        "ajv-formats": "^2.1.1",
        "merge-deep": "^3.0.3",
        "subslate": "^1.0.0",
        "to-json-schema": "^0.2.5",
        "tslog": "^3.3.2",
        "yargs": "^17.3.1"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/merge-deep": "^3.0.0",
        "@types/node": "^17.0.21",
        "@types/to-json-schema": "^0.2.1",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "copyfiles": "^2.4.1",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-jest": "^26.1.1",
        "eslint-plugin-jest-formatting": "^3.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-sonarjs": "^0.12.0",
        "eslint-plugin-unicorn": "^41.0.0",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "bin": {
        "env": "main.js"
    },
    "engines": {
        "node": "~14.0.0 || ^16.13.1",
        "npm": ">=7.5.6"
    },
    "config": {
        "delimiters": {
            "template": [
                "[[",
                "]]"
            ],
            "subcommand": [
                ":",
                ":"
            ]
        },
        "parser": {
            "short-option-groups": true,
            "camel-case-expansion": false,
            "dot-notation": true,
            "parse-numbers": true,
            "boolean-negation": false
        }
    }
}
